{
  "name": "Google Translate Dark Mode",
  "description": "Dark mode extension for browser Google Translate",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["scripting", "activeTab", "storage", "tabs"],
  "host_permissions": [
    "https://translate.google.pl/*",
    "https://translate.google.en/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": ["darkMode.js"],
      "matches": [
        "https://translate.google.pl/*",
        "https://translate.google.en/*"
      ]
    }
  ]
}
